% title format for top sections
\newcommand*{\preparetopsec}{
    \titleformat
        {\section}
        {\vspace{10pt}\scshape\raggedright\Large}
        {}
        {0em}
        {\textsomels}
        [\color{black}]   
}

% title format for normal sections
\newcommand*{\preparenormalsec}{
    \titleformat
        {\section}
        {\titlerule\vspace{10pt}\scshape\raggedright\Large}
        {}
        {0em}
        {\textsomels}
        [\color{black}]   
}


% used in section line spacing
\newcommand*{\textsomels}[1]{\textls[200]{#1}}

\newcommand*{\skill}[2]{
    \textbf{#1}
    \vspace{6pt}
    \justifying
      \begin{adjustwidth}{2pt}{}
        \footnotesize #2
      \end{adjustwidth}
}

\newcommand*{\edu}[4]{
    \textbf{\small #1}\\
    \vspace*{4pt}
    \href
    {#2}
    {\footnotesize #3}\\
    \vspace*{6pt}
    \footnotesize{#4}
}

